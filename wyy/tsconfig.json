{
  "compilerOptions": {
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "noImplicitAny": false, // 是否在表达式和声明上有隐含的any类型时报错
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "server/*": ["./src/server/*"],
      "assets/*": ["./src/assets/*"],
    },
    "moduleResolution": "node",
  },
  "include": [
    "./src/**/*",
    "./images.d.ts"
  ],
  "rules": {
    "no-implicit-dependencies": ["optional", ["src"]]
  }
}